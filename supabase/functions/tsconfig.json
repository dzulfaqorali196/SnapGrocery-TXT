{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowJs": true,
    "types": ["node", "express", "multer"],
    "typeRoots": ["../../node_modules/@types"],
    "baseUrl": ".",
    "paths": {
      "*": ["../../node_modules/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["node_modules"]
} 